# Multi-Agent Stock Analysis Microservices Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AI SERVICE API KEYS
# =============================================================================

# Google Gemini API Key (Required)
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API Key (Optional)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Serper API Key (Optional - for enhanced news search)
# Get from: https://serper.dev/api-key
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database
POSTGRES_DB=vnstock_db
POSTGRES_USER=vnstock
POSTGRES_PASSWORD=vnstock123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Database URL (auto-generated from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URL (auto-generated from above)
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# =============================================================================
# MESSAGE QUEUE CONFIGURATION
# =============================================================================

# RabbitMQ Configuration
RABBITMQ_DEFAULT_USER=vnstock
RABBITMQ_DEFAULT_PASS=vnstock123
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Service Ports
FRONTEND_PORT=8501
PRICE_PREDICTOR_PORT=8001
INVESTMENT_EXPERT_PORT=8002
RISK_EXPERT_PORT=8003
NEWS_AGENT_PORT=8004
MARKET_NEWS_PORT=8005
STOCK_INFO_PORT=8006
LLM_HUB_PORT=8010

# Gateway Configuration
GATEWAY_PORT=80
GATEWAY_HOST=nginx

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log Format
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Secret Key (generate a secure random string)
JWT_SECRET_KEY=your_jwt_secret_key_here

# Session Secret Key
SESSION_SECRET_KEY=your_session_secret_key_here

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:80

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Stock Data APIs
VNSTOCK_API_ENABLED=true
YAHOO_FINANCE_ENABLED=true

# News APIs
NEWS_API_ENABLED=true
NEWS_SOURCES=cafef,vietstock,vneconomy

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Cache TTL (seconds)
CACHE_TTL_SHORT=300      # 5 minutes
CACHE_TTL_MEDIUM=1800    # 30 minutes
CACHE_TTL_LONG=3600      # 1 hour

# Request Timeouts (seconds)
REQUEST_TIMEOUT_SHORT=10
REQUEST_TIMEOUT_MEDIUM=30
REQUEST_TIMEOUT_LONG=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# ML MODEL CONFIGURATION
# =============================================================================

# LSTM Model Settings
LSTM_ENABLED=true
LSTM_LOOKBACK_PERIOD=60
LSTM_PREDICTION_HORIZON=30
LSTM_MODEL_PATH=/app/models/lstm

# Model Training
AUTO_RETRAIN=false
RETRAIN_INTERVAL_DAYS=7

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Mode
DEBUG=false
DEVELOPMENT_MODE=false

# Hot Reload
HOT_RELOAD=false

# Mock Data (for testing)
USE_MOCK_DATA=false

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health Check Intervals (seconds)
HEALTH_CHECK_INTERVAL=30

# Metrics Collection
METRICS_ENABLED=true
METRICS_PORT=9090

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================

# Email Notifications
EMAIL_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Slack Notifications
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=your_slack_webhook_url

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable Features
FEATURE_LSTM_PREDICTION=true
FEATURE_AI_CHAT=true
FEATURE_NEWS_ANALYSIS=true
FEATURE_PORTFOLIO_ANALYSIS=true
FEATURE_RISK_ASSESSMENT=true

# Experimental Features
EXPERIMENTAL_FEATURES=false
FEATURE_CRYPTO_ANALYSIS=false
FEATURE_FOREX_ANALYSIS=false

# =============================================================================
# LOCALIZATION
# =============================================================================

# Default Language
DEFAULT_LANGUAGE=vi
SUPPORTED_LANGUAGES=vi,en

# Timezone
TIMEZONE=Asia/Ho_Chi_Minh

# Currency
DEFAULT_CURRENCY=VND
SUPPORTED_CURRENCIES=VND,USD

# =============================================================================
# NOTES
# =============================================================================

# 1. Replace all "your_*_here" values with actual credentials
# 2. Keep this file secure and never commit it to version control
# 3. Use strong passwords for database and security keys
# 4. Regularly rotate API keys and passwords
# 5. Monitor API usage to avoid rate limits
# 6. Test configuration in development before production deployment